{
  "name": "goodreads-bookmarklet",
  "version": "1.0.0",
  "main": "dist/bundle.js",
  "license": "MIT",
  "description": "A bookmarklet to push Goodreads to Kindle",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcarrag/goodreads-bookmarklet.git"
  },
  "scripts": {
    "postinstall": "patch-package",
    "pursBuild": "spago bundle-module --main Export --to dist/server.js",
    "pursDeploy": "npm run pursBuild && npx serverless deploy function --function server",
    "jsBuild": "rollup -c -m -w",
    "start": "npm run pursBuild && npm run jsBuild"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "husky": "^5.1.1",
    "patch-package": "^6.3.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.40.0",
    "rollup-plugin-serve": "^1.1.0",
    "serverless": "^2.28.0"
  },
  "dependencies": {
    "libgen": "^2.1.0",
    "xmldom": "^0.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && find src/ lib/ -name '*.purs' -exec purty --write {} \\;"
    }
  }
}
